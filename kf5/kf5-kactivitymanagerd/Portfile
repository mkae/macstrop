PortSystem          1.0

set kf5.project     kactivitymanagerd
set kf5.virtualPath plasma
PortGroup           kf5 1.1
kf5.use_latest      plasma

maintainers         @RJVB mk openmaintainer

installs_libs       no

description         KF5 activities manager daemon
long_description    KF5 manager daemon for the KActivities framework.
platform darwin {
    long_description-append \
                    This port is provided for completeness only. It doesn't work (on Mac), and probably isn't intended to.
}

checksums           rmd160  c88249275c19f98a0575de269e3d9f603ce221d9 \
                    sha256  4c53828d5ab9f2beab592b8690c769c8af20ee72af298d12a1e0b7d9dbededb5

kf5.depends_frameworks \
                    kconfig kcoreaddons kdbusaddons kglobalaccel \
                    ki18n kio kwindowsystem kxmlgui
platform darwin {
    depends_lib-append  port:boost
}

kf5.allow_docs_generation no

patchfiles-append   patch-nongui-executable.diff

livecheck.type      regex
livecheck.url       http://download.kde.org/stable/plasma/
livecheck.regex     (5+(\\.\\d+)+)
