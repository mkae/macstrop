PortSystem          1.0

set kf5.project     kde-dev-scripts
set kf5.virtualPath applications
set kf5.category    graphics
PortGroup           kf5 1.1

# kf5.use_latest      applications

# set the name; kf5-kde-dev-scripts would be silly
name                kf5-dev-scripts
maintainers         @RJVB mk openmaintainer

description         KDE Developer convenience scripts
long_description    ${description}

installs_libs       no
supported_archs     noarch

use_xz              yes
checksums           rmd160  21f1fd3fb0792bb4871b363dbb1230faa73b729d \
                    sha256  9bdbe119744256204cd615a6cda7fed75c985f4a3ac5f02ff3d483efe82f3ac6

kf5.allow_docs_generation no

conflicts-append    port:kde-dev-scripts

depends_run-append  port:perl5 \
                    port:python27 \
                    port:gsed

# Not sure why I added a python3 dependency?!
