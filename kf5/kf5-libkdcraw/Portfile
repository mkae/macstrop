PortSystem          1.0

set kf5.project     libkdcraw
set kf5.virtualPath applications
set kf5.category    graphics
PortGroup           kf5 1.1

# kf5.use_latest      applications

description         LibRaw C++ interface for KF5
long_description    Libkdcraw is a C++ interface around LibRaw library used to decode RAW \
                    picture files. More information about LibRaw can be found at http://www.libraw.org.
maintainers         @RJVB mk openmaintainer

installs_libs       yes

checksums           rmd160  28141416b248695f9e5f89cae9246e07026f645e \
                    sha256  aa7fb15aa69b1e38d567dc0169be143824626902d454fcbf0650d8890bd82d9d

platform darwin {
    depends_lib-append \
                    port:libraw
}

configure.args-append \
                    -DBUILD_TESTING=OFF
