# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$
# Copyright (c) 2015, 2016 R.J.V. Bertin

PortSystem          1.0

set kf5.project     marble
set kf5.virtualPath applications
set kf5.category    development
PortGroup           kf5 1.1
PortGroup           active_variants 1.1

# # keep us at 16.08.2 for now
# set kf5.latest_release 16.08.2 ; kf5.use_latest applications

maintainers         gmail.com:rjvbertin mk openmaintainer

installs_libs       yes

description         Virtual Globe, KF5 version.
long_description    KDE virtual globe and world atlas. This is the new version,\
                    based on KF5.
if {[vercmp ${version} 16.08.2] == 0} {
    checksums       rmd160  56928481cc12e6e61daa0604753951a1e6018648 \
                    sha256  e7b070225c4ebaf163e0db64147f8e3b2e86f37aed46c502469992289dc215f9
    if {![variant_isset stock]} {
        patchfiles-append \
                    patch-build-for-macports-16082.diff
    }
} else {
    checksums       rmd160  166156360edcbb4445db66e0318be8347f0ad9fa \
                    sha256  1d4167254399556ee1ed89920047f27ecab92e280a171eb51be60ba330e7171a
    if {![variant_isset stock]} {
        patchfiles-append \
                    patch-build-for-macports-16120.diff
    }
}

if {![catch {set result [active_variants marble kf5compat ""]}]} {
    if {!${result}} {
        conflicts-append \
                    marble
    }
}

kf5.depends_qt5_components \
                    qtsvg qtdeclarative qtlocation qtwebkit

kf5.depends_frameworks \
                    kconfig kcoreaddons kcrash ki18n kio \
                    knewstuff kparts krunner kservice kwallet \
                    plasma-framework

depends_lib-append  port:shapelib \
                    port:phonon-qt5 \
                    port:zlib

variant stock description {do a stock build; purely experimental and for testing purposes} {}

variant gps description {include support for communicating with a GPS} {
    depends_lib-append \
                    port:gpsd
}

platform linux {
    variant nativeQSP description {variant provided for testing purposes} {}
}

patch.pre_args      -Np1

pre-configure {
    if {([string first "-Ofast" ${configure.optflags}] >= 0) || ([string first "-Ofast" ${configure.cxxflags}] >= 0)} {
        ui_error "Marble won't run when built with -Ofast"
        return -code error "Incompatible optimisation level"
    }
}

if {![variant_isset stock]} {
    if {[variant_isset nativeQSP]} {
        configure.args-append \
                    -DAPPLE_STANDALONE_BUNDLE:BOOL=ON
    } else {
        configure.args-append \
                    -DAPPLE_STANDALONE_BUNDLE:BOOL=OFF
    }
}

configure.args-append \
                    -DBUILD_MARBLE_TOOLS=ON \
                    -DBUILD_MARBLE_TESTS=OFF

kf5.allow_apidocs_generation no

destroot.target     install/fast

platform darwin {
    depends_build-append \
                    port:protobuf-c
    post-destroot {
        if {![variant_isset nativeQSP]} {
            file rename ${destroot}${prefix}/bin/marble-qt ${destroot}${prefix}/bin/marble-qt5
            kf5.add_app_wrapper marble5 marble
            # there appears to be no ABI change, for now:
            ln -s libmarblewidget-qt5.26.dylib ${destroot}${prefix}/lib/libmarblewidget-qt5.25.dylib
        } else {
            xinstall -m 755 -d ${destroot}${qt_apps_dir}
            file rename ${destroot}${prefix}/Marble.app ${destroot}${qt_apps_dir}/Marble.app
        }
    }
}
platform linux {
    post-destroot {
        ln -s marble ${destroot}${prefix}/bin/marble5
        # there appears to be no ABI change, for now:
        ln -s libmarblewidget-qt5.so.26 ${destroot}${prefix}/lib/libmarblewidget-qt5.so.25
    }
}
