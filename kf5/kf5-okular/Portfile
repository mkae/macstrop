# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$
# Copyright (c) 2015, 2016 R.J.V. Bertin

PortSystem          1.0

set kf5.project     okular
set kf5.virtualPath applications
set kf5.category    graphics
PortGroup           kf5 1.1

# # kf5.use_latest      applications-not-yet

maintainers         gmail.com:rjvbertin mk openmaintainer

description         Universal document viewer for KF5.
long_description    Okular is a universal document viewer based on KPDF for KDE 5. \
                    This means Okular works on multiple platforms, including but not \
                    limited to Linux, Windows, Mac OS X, *BSD, etc.
homepage            http://okular.kde.org/

subport ${name}-devel {
    description     ${description} This port follows git/frameworks
    long_description \
                    ${long_description} This port follows git/frameworks
}

if {${subport} eq "${name}-devel"} {
    conflicts       ${name}
    fetch.type      git
    git.url     git://anongit.kde.org/okular
#     # v15.12.1-24-gf9917aa
#     git.branch      f9917aa9fe4274d8bce3418437ae8db917e121ec
#     v15.12.1-455-gbfa28f1
    git.branch      bfa28f1f64bfb8225db29d3f90c561b6e0603842
    version         15.12.1.455
    worksrcdir      ${kf5.project}-5
    distname        ${kf5.project}-5
    set SPECPPATH   devel/
} else {
    conflicts       ${name}-devel
    description     ${description} This port doesn't have a release version yet.
    long_description \
                    ${long_description} This port doesn't have a release version yet.
    use_xz          yes
    pre-fetch {
        ui_error "This port doesn't have a release version yet."
        return -code error "This port doesn't have a release version yet."
    }
    checksums       rmd160  51b747049fa45bfd5222247df8feb7ef4650dd2c \
                    sha256  82d90d96a518e065cefe3911737752b4ba06aaa693b9cec0bd0253fe6f951f97
    set SPECPPATH   ""
}


# conflicts

kf5.depends_frameworks \
                    kactivities karchive kbookmarks kcompletion \
                    kconfig kconfigwidgets kcoreaddons \
                    kdbusaddons kjs kdelibs4support kio kparts \
                    threadweaver kwallet khtml
# I have a Qt5 build for mobipocket, but the Okular module using it doesn't build. Bummer.
#                     port:mobipocket-qt5
depends_lib-append  port:phonon-qt5 \
                    port:zlib \
                    path:lib/libpoppler-qt5.${kf5::libs_ext}:poppler-qt5 \
                    port:qca-qt5 \
                    port:kf5-libkexiv2 \
                    port:jpeg
platform darwin {
    depends_lib-append \
                    port:libspectre \
                    port:djvulibre \
                    port:chmlib \
                    port:ebook-tools \
                    port:tiff \
                    port:freetype
}

kf5.allow_docs_generation no

patch.pre_args      -Np1
patchfiles-append   patch-utilcpp.diff \
                    ${SPECPPATH}patch-frameworks.diff \
                    ${SPECPPATH}patch-kcfg_name.diff \
                    ${SPECPPATH}patch-use-kate5.diff
if {${subport} eq "${name}-devel"} {
    patchfiles-append \
                    ${SPECPPATH}patch-open-docs-from-Finder.diff
}
# https://bugs.kde.org/show_bug.cgi?id=368382
patchfiles-append   patch-plugin-depends.diff

platform darwin {
    variant kde4compat description {allow installation alongside KDE4's port:okular} {}
    post-destroot {
        kf5.add_app_wrapper okular5 okular
        # rename okular.kcfg to accompany patch-kcfg_name.diff :
        file rename ${destroot}${prefix}/share/config.kcfg/okular.kcfg ${destroot}${prefix}/share/config.kcfg/okular5.kcfg
        if {[variant_isset kde4compat]} {
            file delete -force ${destroot}${prefix}/share/config.kcfg/okular_core.kcfg
            file delete -force ${destroot}${prefix}/share/config.kcfg/pdfsettings.kcfg
            file delete -force ${destroot}${prefix}/share/config.kcfg/gssettings.kcfg
            foreach res [glob -nocomplain ${destroot}${prefix}/share/icons/hicolor/*/apps/*.png] {
                file rename ${res} [strsed ${res} "s/\.png/5.png/"]
            }
            file rename ${destroot}${prefix}/share/man/man1/okular.1 ${destroot}${prefix}/share/man/man1/okular5.1
            file rename ${destroot}${prefix}/share/doc/HTML/en/okular ${destroot}${prefix}/share/doc/HTML/en/okular5
        }
    }
}
platform linux {
    post-destroot {
        kf5.add_app_wrapper okular5 okular
    }
}
