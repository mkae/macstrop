#     patchfiles-delete \
#                     patch-no-plasmate.diff
#     patchfiles-append \
#                     patch-preserve-app-icon.diff \
#                     patch-temp-fixes.diff
#     post-destroot {
#         kf5.add_app_wrapper plasmate5 plasmate
